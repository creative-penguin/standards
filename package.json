{
  "name": "@creativepenguin/standards",
  "version": "0.2.1",
  "description": "Various shared coding standard configs for Creative Penguin repos.",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "echo 'Tests need to be setup!'",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix"
  },
  "homepage": "https://github.com/creative-penguin/standards",
  "repository": {
    "type": "git",
    "url": "https://github.com/creative-penguin/standards.git"
  },
  "author": "Jim Jenkins <jimjenkins5@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@commitlint/config-conventional": "7.5.0",
    "@silvermine/eslint-config": "2.3.0",
    "@vue/eslint-config-typescript": "4.0.0",
    "conventional-commit-types": "2.0.0",
    "eslint-plugin-vue": "5.2.3",
    "lodash.map": "4.6.0",
    "longest": "1.0.1",
    "right-pad": "1.0.1",
    "word-wrap": "1.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "commitizen": "4.0.3",
    "eslint": "5.16.0",
    "husky": "1.3.1",
    "typescript": "3.6.4"
  },
  "config": {
    "commitizen": {
      "path": "./commitizen.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
